<launch>

    <arg name="namespace" default="panda_arm"/>
    <include file="$(find franka_mujoco)/launch/panda_arm_sim.launch" >
        <arg name="namespace" value="$(arg namespace)"/>
    </include>

    <node pkg="tf" type="static_transform_publisher" name="localization" args="0 0 0 0 0 0 map panda_link0 100" output="screen"/>
    
    <group ns="$(arg namespace)">
        <param name="robot_description" command="$(find xacro)/xacro $(find franka_description)/robots/panda_arm.urdf" />
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

        <include file="$(find franka_control)/launch/franka_traj_control.launch" />
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find franka_mujoco)/rviz_config/rviz_config.rviz" />
    </group>

</launch>