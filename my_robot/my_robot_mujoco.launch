<launch>
    <include file="$(find mujoco_sim)/launch/mujoco_sim.launch">
        <arg name="robot" value="$(find my_robot)/robot/my_robot.urdf"/>
        <arg name="use_urdf" value="true"/>
        <arg name="disable_parent_child_collision_level" value="3"/>
        <arg name="config" value="$(find my_robot)/config/my_robot.yaml"/>
    </include>

    <rosparam command="load" file="$(find my_robot)/config/default_controllers.yaml" />
    <node pkg="controller_manager" type="controller_manager" name="controller_manager" output="screen" args="spawn
        joint_state_controller 
        torso_controller
        l_arm_controller
        r_arm_controller
        l_gripper_controller
        r_gripper_controller"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <node pkg="rqt_joint_trajectory_controller" type="rqt_joint_trajectory_controller" name="rqt_joint_trajectory_controller" output="screen"/>

    <node pkg="rqt_robot_steering" type="rqt_robot_steering" name="rqt_robot_steering" output="screen"/>
</launch>